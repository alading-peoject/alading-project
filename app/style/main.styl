@import 'qst/all'
@import 'config'

$viewsize()
$global-normalize()
$oocss(true)
p{margin:0;padding:0}
body{
  overflow-scrolling touch
  -webkit-overflow-scrolling touch
  max-width $rem(740px)
  min-width $rem(320px)
  font-size $base-text-font
  i{
    font-style normal
  }
  .hide{
    display none
  }
  .wrap{
    width 100%
    height 100%
    max-width $rem(740px)
    margin 0 auto
    position absolute
    top 0
    left @top
    right @top
    bottom @top
    overflow-y scroll
    overflow-x hidden
  }
  .homeSlide {
    position: relative;
    overflow: hidden;
    font-size: 0;
    line-height: 0;
    width 100%
    height $rem(boxheight = 325px)
    ul {
      position: absolute
      width 100%
      height 100%
      li {
        position: absolute;
        top: 0;
        left: 0;
        z-index: 2
        overflow: hidden;
        width: 100%;
        text-align: center;
        -webkit-transform-style: preserve-3d;
        transform-style: preserve-3d;
        background url("../image/banner-default.png") no-repeat center top
        background-size $rem(640px auto);
      }
      a {
        display: block
      }
      img {
        width: 100%;
        height: $rem(boxheight)
      }
    }
    ol {
      position: absolute;
      z-index: 3;
      right: 0;
      bottom: $rem(16px);
      width: 100%;
      text-align: center;
      li {
        display: inline-block;
        width: $rem(15x);
        height: $rem(15x);
        margin-right: $rem(7px);
        border-radius: 100%;
        background-color: rgba(255, 255, 255, .6)
        &.on {
          background-color: rgba(255, 255, 255, 1)
        }
      }
    }
  }
}

/*
* 该版风格用到的样式定义
********************************/

$font-size-24 = $rem(24px)
$font-size-20 = $rem(20px)
$font-size-34 = $rem(34px)
$font-size-30 = $rem(30px)
$font-size-36 = $rem(20px)
$font-size-18 = $rem(18px)
$font-size-36 = $rem(36px)

$image-correct = "../image/buyresult/buy-result_01.png"
$image-sprite = "../image/common/sprite_01.png"

$black-background-color = #2b2b2b
$grey-background-color = #f5f5f5
$greyer-background-color = #e9e9e9
$brown-border = $rem(1px) solid #1c1a1c

$light-yellow-color = rgba(253,183,82,1.0)
// $dark-yellow-color = rgba(199,125,32,1.0)
$dark-yellow-color = rgba(227,143,3,1.0)
$white-color = #fff
$black-color = #303030
$grey-color = #7f7f7f

$border-radius-default = $rem(5px)
$border-radius-big = $rem(20px)

setFontSize(size){
  font-size size
}

/*该版风格用到的布局:即用在特定区块用以实现某种排版的样式
**************************************************/
$header-height = $rem(70px)
.margin-left-right-default{
  margin 0 $rem(28px)
}

/*********自定义的可重用界面组件************/
.text-center{
  text-align center
}
.text-left{
  text-align left
}
.text-right{
  text-align right
}

.header{
  height $header-height
  line-height $header-height
  background-color $black-background-color
  border-top $brown-border
  position relative
  h1{
    @extend .text-center
    margin 0
    setFontSize($font-size-30)
    //$text-gradient($light-yellow-color,$dark-yellow-color)
  }
  .button{
    //$text-gradient($light-yellow-color,$dark-yellow-color)
    setFontSize($font-size-24)
    position absolute
    right $rem(20px)
    top $rem(0px)
  }
}

.flag-success{
  width $rem(170px)
  height $rem(170px)
  background no-repeat 0 0
  background-image $image-correct
  background-size contain
}

.btn{
  padding $rem(10px) $rem(20px)
  color $white-color
  border-radius $border-radius-default
  display inline-block
  $background-gradient($light-yellow-color,$dark-yellow-color)
}
.btn-width-radius{
  padding $rem(5px) $rem(20px)
  color $dark-yellow-color
  border-radius $border-radius-big
  display inline-block
  border $rem(1px) solid $light-yellow-color
  //$text-gradient($light-yellow-color,$dark-yellow-color)
}


@import '../variable.styl'
@import '../common/typography.styl'
@import '../common/component.styl'

.buy-card-special{ 
  summarize()
  .top{
    height $rem(57px)
    border-bottom $rem(1px) solid #dcdcdc
    display flex
    padding $rem(0 0 0 20px)
    .left{
      flex 2
      display flex
      justify-content space-between
      align-items center
    }
    .right{
      width $rem(57px)
      height 100%
      background-color #dcdcdc
      color $white-color
      display flex
      justify-content center
      align-items center
    }
    .sub-left{
      display flex
      align-items center
    }
    .sub-right{
      width $rem(57px)
      height @width
      background-repeat no-repeat
      background-image url("../image/buycardspecial/special_03.jpg")
      background-position left center
    }
    .shape{
      width $rem(36px)
      height $rem(36px)
      border-radius $rem(18px)
      background-color #e8e8e8
      display inline-block
      margin-right $rem(10px)
    }
    
  }
  .content{
    padding $rem(28px)
    background-color #ebebeb
  }
  lafe-intro-item(100%)
  .item{
    border $rem(1px) solid #dedede
    .send-button{
      border-radius $rem(20px)
      padding $rem(0px 20px)
      $background-gradient($light-yellow-color,$dark-yellow-color)
      color $white-color
    }
    border-radius $rem(5px)
  }
  .bottom{
    background-color $white-color
    border-top $rem(1px) solid $grey-background-color
    height $rem(74px)
    line-height @height
    display flex
    align-items center
    .expression,.more{
      width $rem(50px)
      height $rem(50px)
      display inline-block
      margin-right $rem(20px)
      background-repeat no-repeat
      background-position left top
    }  
    .expression{
      background-image url("../image/buycardspecial/special_07.jpg")
    }
    .more{
      background-image url("../image/buycardspecial/special_09.jpg")
    }
    .enter-box{
      flex 2
      height $rem(42px)
      line-height @height
      border $rem(1px) solid $grey-background-color
      border-radius $rem(5px)
      margin-right $rem(20px)
    }
    .send{
      display inline-block
      width $rem(84px)
      height $rem(42px)
      line-height @height
      color $white-color
      text-align center
      border-radius 20px
      $background-gradient($light-yellow-color,$dark-yellow-color)
    }
  }
}
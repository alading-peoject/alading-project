.buy-result{  
  .success{
    margin-top $rem(105px)
    text-align center
  }
  
  .message{
    margin-top $rem(30px)
    text-align center
    .info01{
      color $black-color
      setFontSize($font-size-34)
    }
    .info02{
      color $grey-color
      setFontSize($font-size-20)
      margin-top $rem(20px)
    }
    strong{
      setFontSize($font-size-24)
    }
  }
  .button-frame{
    margin-top $rem(40px)
    @extend .text-center
    .button{
      @extend .btn
      text-decoration none
    }
    .back{
      margin-left $rem(30px)
    }
  }
}